.container
  .article
  %h1.article_title= @board.name
  .article_detail
    プロフィール画像を表示する
  .article_content
    = @board.description
  .article_detail_actions
    .dropdown
      = image_tag 'actions.svg', class: 'dropbtn'
      .dropdown-content.mini
        = link_to 'Edit' , edit_article_path(@board)
        = link_to 'Delete' , article_path(@board), data: { method: 'delete' , confirm: '本当に削除してもよろしいですか？' }